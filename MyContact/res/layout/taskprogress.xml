<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactActivity" >
<LinearLayout 
     android:background="@android:color/black"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:id="@+id/line_taskprogresstitle"
    >
    <Button
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:ellipsize="end"
        android:lines="2"
        android:text="返回" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="当前任务进度"
        android:textColor="@android:color/white" />
</LinearLayout>
    <LinearLayout
        android:layout_below="@+id/textView13"
        android:id="@+id/line_taskprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:textColor="@color/TextColorBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一步" />

        <TextView
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《《《====" />

        <TextView
              android:textColor="@color/TextColorBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二步" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《《《====" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三步" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_taskprogress"
        android:text="备注:" />

    <EditText
        android:id="@+id/edit_takprocess"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView10"
        android:hint="记录的详细信息" />

    <LinearLayout
        android:id="@+id/line_tadkprogress_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_takprocess"
        android:orientation="horizontal" >
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="确定" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_centerHorizontal="true"
        android:text="图片" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:text="录音" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/line_tadkprogress_detail"
        android:layout_toRightOf="@+id/button3"
        android:text="视频" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line_taskprogresstitle"
        android:text="选择任务节点：" />

    

</RelativeLayout>